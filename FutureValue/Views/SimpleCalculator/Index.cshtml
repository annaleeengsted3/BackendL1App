
@{
    ViewData["Title"] = "SimpleCalculator";
}

<h1>SimpleCalculator: write 2 numbers and then the operator</h1>

@addTagHelper"*, Microsoft.AspNetCore.Mvc.TagHelpers"
<form method="post" asp-controller="SimpleCalculator" asp-action="Index">
    <p>
        <label for="number1"></label><br />
        <input type="text" name="number1" />
    </p>
    <p>
        <label for="number2"></label><br />
        <input type="text" name="number2" />
    </p>
 
    <input type="submit" name="operator" value="+">
    <input type="submit" name="operator" value="-">
    <input type="submit" name="operator" value="*">
    <input type="submit" name="operator" value="/">
 
</form>

<h3>Result: @ViewBag.Result</h3>

